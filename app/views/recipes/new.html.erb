<ul class="container border list-unstyled">
    <h2>Add recipe</h2>
    <%= form_with model: Recipe.new, class: "my-4" do |f| %>
        <li class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
        </li>
        <li class="mb-3">
            <%= f.label :preparation_time, class: "form-label" %>
            <%= f.text_field :preparation_time, class: "form-control" %>
        </li>
        <li class="mb-3">
            <%= f.label :cooking_time, class: "form-label" %>
            <%= f.text_field :cooking_time, class: "form-control" %>
        </li>
        <li class="mb-3">
            <%= f.label :description, class: "form-label" %>
            <%= f.text_field :description, class: "form-control" %>
        </li>
        <li class="checkbox form-check form-switch mb-3">
            <%= f.label :public, class: 'form-check-label', for: 'flexSwitchCheckDefault' %>
            <%= f.check_box :public, class: 'form-check-input', id: 'flexSwitchCheckDefault' %>
        </li>
        <%= f.submit class: "btn btn-primary" %>
    <% end %>
</ul>

